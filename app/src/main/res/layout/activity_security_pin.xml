<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btnback"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="200dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/navigate_before"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:id="@+id/layout_text_addpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_addpin"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Add PIN"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_main_logoPIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_main_pin"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/icon_mainpin"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/box_btn_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/box_addfinger"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="12dp"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_gravity="center">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_pin"
                        app:shapeAppearanceOverlay="@style/cr15"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/pin"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:inputType="text"
                        android:hint="PIN"
                        android:background="@null"
                        android:id="@+id/tv_pin"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:paddingVertical="6dp"
                        />
                </LinearLayout>
            </LinearLayout>
</LinearLayout>